{% include 'LS_5906464808_global' %}
<div class="newsletter">
  <div class="wrapper">
    {% unless section.settings.heading == blank %}
      <div class="section-header text-center">
        <h2 class="h1 section-header__title">{% capture LS_locales_settings_key %}{{ section.id }}.heading{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.heading | escape }}{% else %}{{ LS_5906464808_settings_value | escape  }}{% endif %}</h2>
        {% capture LS_locales_settings_key %}{{ section.id }}.subheading{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.subheading == blank and LS_5906464808_settings_value == blank %}
          <hr class="hr--small">
        {% endif %}
      </div>
    {% endunless %}
    {% unless section.settings.subheading == blank %}
      <div class="section-subheading text-center">
        <p>{% capture LS_locales_settings_key %}{{ section.id }}.subheading{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.subheading | escape }}{% else %}{{ LS_5906464808_settings_value | escape  }}{% endif %}</p>
        <hr class="hr--small">
      </div>
    {% endunless %}
    {% form 'customer' %}
      {{ form.errors | default_errors }}
      {% if form.posted_successfully? %}
        <div class="newsletter--form">
          <div class="note form-success">{% include 'LS_5906464808_locales', LS_locales_item: 'general.newsletter_form.newsletter_confirmation',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.newsletter_form.newsletter_confirmation' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</div>
        </div>
      {% else %}
        <label for="Email" class="newsletter__label hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'general.newsletter_form.newsletter_email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.newsletter_form.newsletter_email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter--form">
          <div class="input-group">
            <input type="email" value="{% if customer %}{{ customer.email }}{% endif %}" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'general.newsletter_form.newsletter_placeholder',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.newsletter_form.newsletter_placeholder' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" name="contact[email]" id="Email" class="input-group-field newsletter__input" autocorrect="off" autocapitalize="off">
            <span class="input-group-btn">
              <button type="submit" class="btn newsletter__submit" name="commit" id="Subscribe">
                <span class="newsletter__submit-text--large">{% include 'LS_5906464808_locales', LS_locales_item: 'general.newsletter_form.submit',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.newsletter_form.submit' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</span>
                <span class="newsletter__submit-text--small">
                  <span class="icon icon-arrow-right" aria-hidden="true"></span>
                </span>
              </button>
            </span>
          </div>
        </div>
      {% endif %}
    {% endform %}
  </div>
</div>

{% schema %}
  {
    "name": "Newsletter",
    "class": "index-newsletter-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Subscribe to our newsletter"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "A short sentence describing what someone will receive by subscribing"
      },
      {
        "type": "paragraph",
        "content": "Any customers who sign up will have an account created for them in Shopify. [View customers](/admin/customers?query=&accepts_marketing=1)"
      }
    ],
    "presets": [{
      "name": "Newsletter signup",
      "category": "Promotional"
    }],
    "blocks" : []
  }
{% endschema %}
