{% include 'LS_5906464808_global' %}
<style>
  .site-header__logo img {
    max-width: {% capture LS_locales_settings_key %}{{ section.id }}.logo_max_width{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo_max_width | escape | default: '180' | remove: 'px' | append: 'px' }}{% else %}{{ LS_5906464808_settings_value | escape | default: '180' | remove: 'px' | append: 'px'  }}{% endif %};
  }

  @media screen and (max-width: 768px) {
    .site-header__logo img {
      max-width: 100%;
    }
  }
</style>

{% assign hero_full_height = true %}
<div data-section-id="{{ section.id }}" data-section-type="header-section" data-template="{{ template.name }}">
  <div class="header-container">
    <div class="header-wrapper{% unless hero_full_height %} header-wrapper--over-hero{% endunless %}">
      {% capture LS_locales_settings_key %}{{ section.id }}.show_announcement{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.show_announcement  or LS_5906464808_settings_value != blank %}
        {% if section.settings.home_page_only == false or template.name == 'index' %}
          <style>
            .announcement-bar {
              background-color: {% capture LS_locales_settings_key %}{{ section.id }}.color_bg{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.color_bg }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %};
            }

            .announcement-bar--link:hover {
              {% capture LS_locales_settings_key %}{{ section.id }}.color_bg{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{% assign brightness = section.settings.color_bg | color_brightness %}{% else %}{% assign brightness = LS_5906464808_settings_value | color_brightness  %}{% endif %}

              {% if brightness <= 192 %}
                {% assign lightenAmount = 255 | minus: brightness | divided_by: 255 | times: 16 %}
                background-color: {% capture LS_locales_settings_key %}{{ section.id }}.color_bg{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.color_bg | color_lighten: lightenAmount }}{% else %}{{ LS_5906464808_settings_value | color_lighten: lightenAmount  }}{% endif %};
              {% else %}
                {% assign darkenAmount = 255 | divided_by: brightness | times: 8 %}
                background-color: {% capture LS_locales_settings_key %}{{ section.id }}.color_bg{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.color_bg | color_darken: darkenAmount }}{% else %}{{ LS_5906464808_settings_value | color_darken: darkenAmount  }}{% endif %};
              {% endif %}
            }

            .announcement-bar__message {
              color: {% capture LS_locales_settings_key %}{{ section.id }}.color_text{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.color_text }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %};
            }
          </style>

          {% capture LS_locales_settings_key %}{{ section.id }}.link{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.link == blank and LS_5906464808_settings_value == blank %}
            <div class="announcement-bar">
          {% else %}
            <a href="{% capture LS_locales_settings_key %}{{ section.id }}.link{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.link }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %}" class="announcement-bar announcement-bar--link">
          {% endif %}

            <p class="announcement-bar__message">{% capture LS_locales_settings_key %}{{ section.id }}.text{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.text | escape }}{% else %}{{ LS_5906464808_settings_value | escape  }}{% endif %}</p>

          {% capture LS_locales_settings_key %}{{ section.id }}.link{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.link == blank and LS_5906464808_settings_value == blank %}
            </div>
          {% else %}
            </a>
          {% endif %}

        {% endif %}
      {% endif %}

      <header class="site-header" role="banner">
        <div class="wrapper">
          <div class="grid--full grid--table">
            <div class="grid__item large--hide large--one-sixth one-quarter">
              <div class="site-nav--open site-nav--mobile">
                <button type="button" class="icon-fallback-text site-nav__link site-nav__link--burger js-drawer-open-button-left" aria-controls="NavDrawer">
                  <span class="burger-icon burger-icon--top"></span>
                  <span class="burger-icon burger-icon--mid"></span>
                  <span class="burger-icon burger-icon--bottom"></span>
                  <span class="fallback-text">{% include 'LS_5906464808_locales', LS_locales_item: 'general.drawers.navigation',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.drawers.navigation' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</span>
                </button>
              </div>
            </div>
            <div class="grid__item large--one-third medium-down--one-half">
              {% comment %}
                Use the uploaded logo from theme settings if enabled.
                Site name gets precedence with H1 tag on homepage, div on other pages.
              {% endcomment %}
              {% if template.name == 'index' %}
                <h1 class="site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
              {% else %}
                <div class="h1 site-header__logo large--left" itemscope itemtype="http://schema.org/Organization">
              {% endif %}
                {% capture LS_locales_settings_key %}{{ section.id }}.logo_max_width{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}
{%  if section.settings.logo_max_width != blank or LS_5906464808_settings_value != blank %}
                  {% capture image_size %}{% capture LS_locales_settings_key %}{{ section.id }}.logo_max_width{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo_max_width | escape }}{% else %}{{ LS_5906464808_settings_value | escape  }}{% endif %}x{% endcapture %}
                {% else %}
                  {% assign image_size = "180x" %}
                {% endif %}

                {% if section.settings.logo-inverted and template.name == 'index' %}
                  <a href="/" itemprop="url" class="site-header__logo-link">
                    <img src="{% capture LS_locales_settings_key %}{{ section.id }}.logo-inverted{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo-inverted | img_url: image_size }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %}"
                    srcset="{% capture LS_locales_settings_key %}{{ section.id }}.logo-inverted{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo-inverted | img_url: image_size }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %} 1x, {% capture LS_locales_settings_key %}{{ section.id }}.logo-inverted{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo-inverted | img_url: image_size, scale: 2 }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %} 2x"
                    alt="{% capture LS_locales_settings_key %}{{ section.id }}.logo-inverted.alt{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo-inverted.alt | default: shop.name }}{% else %}{{ LS_5906464808_settings_value | default: shop.name  }}{% endif %}"
                    itemprop="logo">
                  </a>
                {% elsif section.settings.logo %}
                  <a href="/" itemprop="url" class="site-header__logo-link">
                     <img src="{% capture LS_locales_settings_key %}{{ section.id }}.logo{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo | img_url: image_size }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %}"
                     srcset="{% capture LS_locales_settings_key %}{{ section.id }}.logo{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo | img_url: image_size }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %} 1x, {% capture LS_locales_settings_key %}{{ section.id }}.logo{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo | img_url: image_size, scale: 2 }}{% else %}{{ LS_5906464808_settings_value  }}{% endif %} 2x"
                     alt="{% capture LS_locales_settings_key %}{{ section.id }}.logo.alt{% endcapture %}{% include 'LS_5906464808_settings', LS_settings_item: LS_locales_settings_key %}{% if LS_5906464808_settings_value == blank %}{{ section.settings.logo.alt | default: shop.name }}{% else %}{{ LS_5906464808_settings_value | default: shop.name  }}{% endif %}"
                     itemprop="logo">
                  </a>
                {% else %}
                  <a href="/" itemprop="url">{{ shop.name }}</a>
                {% endif %}
              {% if template.name == 'index' %}
                </h1>
              {% else %}
                </div>
              {% endif %}
            </div>
            <div class="grid__item large--two-thirds large--text-right medium-down--hide">
              {% comment %}
                List out your main-menu linklist (default)

                More info on linklists:
                  - http://docs.shopify.com/themes/liquid-variables/linklists
              {% endcomment %}
              <!-- begin site-nav -->
              <ul class="site-nav" id="AccessibleNav">
                {% if section.settings.search == "box" %}
                <li class="site-nav__item site-nav--search__bar medium-down--hide ">
                  {% include 'search-bar', search_btn_style: 'btn', search_bar_location: 'search-bar--header' %}
                </li>
                {% endif %}

                {% for link in linklists[section.settings.main_menu_link_list].links %}
                  {% comment %}
                    Create a dropdown menu by naming a linklist the same as a link in the parent nav

                    More info on dropdowns:
                      - http://docs.shopify.com/manual/your-website/navigation/create-drop-down-menu
                  {% endcomment %}
                  {% assign child_list_handle = link.title | handleize %}
                  {% if linklists[child_list_handle].links != blank %}
                    <li class="site-nav__item site-nav__expanded-item site-nav--has-dropdown{% unless template.name == 'index' %}{% if link.active %} site-nav--active{% endif %}{% endunless%}" aria-haspopup="true">
                      <a href="{{ link.url }}" class="site-nav__link">
                        {% include 'LS_5906464808_nav_title', item: link %}{{ LS_5906464808_link_title  }}
                        <span class="icon icon-arrow-down" aria-hidden="true"></span>
                      </a>
                      <ul class="site-nav__dropdown text-left">
                        {% for childlink in linklists[child_list_handle].links %}
                          <li {% if childlink.active %} class="site-nav--active"{% endif %}>
                            <a href="{{ childlink.url }}" class="site-nav__dropdown-link">{% include 'LS_5906464808_nav_title', item: childlink %}{{ LS_5906464808_link_title | escape  }}</a>
                          </li>
                        {% endfor %}
                      </ul>
                    </li>
                  {% else %}
                    <li class="site-nav__item site-nav__expanded-item{% if link.title == 'Sale' %} sale-item{% endif %}{% unless template.name == 'index' %}{% if link.active %} site-nav--active{% endif %}{% endunless%}">
                      <a href="{{ link.url }}" class="site-nav__link{% if link.title == 'Sale' %} sale-item{% endif %}">{% include 'LS_5906464808_nav_title', item: link %}{{ LS_5906464808_link_title  }}</a>
                    </li>
                  {% endif %}
                {% endfor %}
                {% comment %} 
                {% if shop.customer_accounts_enabled %}
                  <li class="site-nav__item site-nav__expanded-item">
                    <a class="site-nav__link site-nav__link--icon" href="/account">
                      <span class="icon-fallback-text">
                        <span class="icon icon-customer" aria-hidden="true"></span>
                        <span class="fallback-text">
                          {% if customer %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.account',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.account' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% else %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.log_in',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.log_in' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% endif %}
                        </span>
                      </span>
                    </a>
                  </li>
                {% endif %} {% endcomment %}

                {% if section.settings.search == 'page' or section.settings.search == 'modal' %}
                  {% assign search_modal = true %}
                  {% if section.settings.search == 'page' %}
                    {% assign search_modal = false %}
                  {% endif %}
                   <li class="site-nav__item sale_item ">
                    <a href="/collection/sale" class="">
                      SALE
                    </a>
                  </li>
                {% if shop.customer_accounts_enabled %}
                  <li class="site-nav__item site-nav__expanded-item site-nav__item_user_link">
                    <a class="site-nav__link site-nav__link--icon" href="/account">
                      <span class="icon-fallback-text">
                        <span class="icon icon-customer" aria-hidden="true"></span>
                        <span class="fallback-text">
                          {% if customer %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.account',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.account' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% else %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.log_in',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.log_in' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% endif %}
                        </span>
                      </span>
                    </a>
                  </li>
                {% endif %}
                  <li class="site-nav__item  site-nav__item_search">
                    <a href="/search" class="site-nav__link site-nav__link--icon{% if search_modal %} js-toggle-search-modal{% endif %}" data-mfp-src="#SearchModal">
                      <span class="icon-fallback-text">
                        <span class="icon icon-search" aria-hidden="true"></span>
                        <span class="fallback-text">{% include 'LS_5906464808_locales', LS_locales_item: 'general.search.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'general.search.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</span>
                      </span>
                    </a>
                  </li>
                {% endif %}
                {% comment %} <li class="site-nav__item  site-nav__item_cart">
                  <a href="/cart" class="site-nav__link site-nav__link--icon cart-link js-drawer-open-button-right" aria-controls="CartDrawer">
                    <span class="icon-fallback-text">
                      <span class="icon icon-cart" aria-hidden="true"></span>
                      <span class="fallback-text">{% include 'LS_5906464808_locales', LS_locales_item: 'layout.cart.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.cart.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</span>
                    </span>
                    <span class="cart-link__bubble{% if cart.item_count > 0 %} cart-link__bubble--visible{% endif %}"></span>
                  </a>
                </li> {% endcomment %}
                <li class="site-nav__item  site-nav__item_cart">
                   <a href="/cart" class="cart-page-link">
                  <span class="icon icon-cart header-bar__cart-icon" aria-hidden="true"></span>
                  <span class="cart-count header-bar__cart-count{% if cart.item_count == 0 %} hidden-count{% endif %}">{{ cart.item_count }}
                  </span>
                   </a>
                </li>
             {% if shop.customer_accounts_enabled %}
                {% if customer  %}
                  <a href="/account">Your Account</a>
                {% else %}
                  {{ 'Log in' | customer_login_link }}
                  {% if shop.customer_accounts_optional %}
                    <span>or</span>
                    {{ 'Create an account' | customer_register_link }}
                  {% endif %}
                {% endif %}
              {% endif %}
              </ul>
              <!-- //site-nav -->
            </div>
            <div class="grid__item large--hide one-quarter">
              <div class="site-nav--mobile text-right">
                {% comment %} <a href="/cart" class="site-nav__link cart-link js-drawer-open-button-right" aria-controls="CartDrawer">
                  <span class="icon-fallback-text">
                    <span class="icon icon-cart" aria-hidden="true"></span>
                    <span class="fallback-text">{% include 'LS_5906464808_locales', LS_locales_item: 'layout.cart.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.cart.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</span>
                  </span>
                  <span class="cart-link__bubble{% if cart.item_count > 0 %} cart-link__bubble--visible{% endif %}"></span>
                </a> {% endcomment %}
              

                <li class="site-nav__item  site-nav__item_cart">
                    <a href="/cart" class="cart-page-link">
                    <span class="icon icon-cart header-bar__cart-icon mobile-icon" aria-hidden="true"></span>
                    <span class="cart-count cart-count-mobile header-bar__cart-count{% if cart.item_count == 0 %} hidden-count{% endif %}">{{ cart.item_count }}
                    </span>
                    </a>
                </li>
                <li class="site-nav__item site-nav__expanded-item site-nav__item_user_link">
                    <a class="site-nav__link site-nav__link--icon" href="/account">
                      <span class="icon-fallback-text">
                        <span class="icon icon-customer mobile-icon" aria-hidden="true"></span>
                        <span class="fallback-text">
                          {% if customer %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.account',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.account' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% else %}
                            {% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.log_in',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.log_in' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
                          {% endif %}
                        </span>
                      </span>
                    </a>
                </li>
              </div>
            </div>
          </div>

        </div>
      </header>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "main_menu_link_list",
        "label": "Menu",
        "default": "main-menu"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo-inverted",
        "label": "Home page logo",
        "info": "Shown on slideshow"
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": "Custom logo width (in pixels)",
        "default": "180"
      },
      {
        "type": "select",
        "id": "search",
        "options": [
           { "value": "modal",
             "label": "Modal"
           },
           { "value": "page",
             "label": "Page"
           },
           { "value": "box",
             "label": "Box"
           },
           { "value": "none",
             "label": "None"
           }
        ],
        "label": "Search type"
      },
      {
        "type": "header",
        "content": "Announcement bar"
      },
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show announcement",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "home_page_only",
        "label": "Home page only",
        "default": true
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "Announce something here"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Bar",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text",
        "default": "#fff"
      }
    ]
  }
{% endschema %}
