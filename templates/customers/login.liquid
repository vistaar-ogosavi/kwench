{% include 'LS_5906464808_global' %}
<!-- /templates/customers/login.liquid -->

<div class="grid">

  <div class="grid__item large--one-third push--large--one-third text-center">

    <header class="section-header">
      <h1>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h1>
      <hr class="hr--small">
    </header>

    {% comment %}
      If a user has successfully requested a new password, the form.posted_successfully? variable
      is set to true within the 'recover_customer_password' form only. Within that form you'll see
      the variable 'resetPassword' set to true, which is used to initialize timber.resetPasswordSuccess().
    {% endcomment %}
    <div class="note form-success" id="ResetSuccess" style="display:none;">
      {% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.success',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.success' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
    </div>

    <div id="CustomerLoginForm" class="form-vertical">
      {% form 'customer_login' %}

        {{ form.errors | default_errors }}

        <label for="CustomerEmail" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="email" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" autocorrect="off" autocapitalize="off" autofocus>

        {% if form.password_needed %}
          <label for="CustomerPassword" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.password',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.password' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.password',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.password' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">
        {% endif %}

        <p>
          <input type="submit" class="btn btn--full" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.sign_in',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.sign_in' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">
        </p>
        <p>{% include 'LS_5906464808_locales', LS_locales_item: 'layout.customer.create_account',   %}{% if LS_5906464808_locales_value == '' %}{{ 'layout.customer.create_account' | t | customer_register_link }}{% else %}{{ LS_5906464808_locales_value | customer_register_link  }}{% endif %}</p>
        <p><a href="{{ shop.url }}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.cancel',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.cancel' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>
        {% if form.password_needed %}
          <p><a href="#recover" id="RecoverPassword">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.forgot_password',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.forgot_password' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>
        {% endif %}

      <input type='hidden' name='customer[tags]' value='ls~{% if cart.attributes.LS_language %}{{ cart.attributes.LS_language }}{% else %}{{ shop.metafields.langshop['lang_default'] }}{% endif %}ls~'/> 
 {% endform %}
    </div>

    {% comment %}
      JS shows/hides this form in timber.loginForms()
    {% endcomment %}
    <div id="RecoverPasswordForm" style="display: none;">

      <h2>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h2>
      <p>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.subtext',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.subtext' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</p>
      <hr class="hr--small">

      <div class="form-vertical">
        {% form 'recover_customer_password' %}

          {{ form.errors | default_errors }}

          {% comment %}
            Assign variable to be used after timber.init() is run in theme.liquid
          {% endcomment %}
          {% if form.posted_successfully? %}
            {% assign resetPassword = true %}
          {% endif %}

          <label for="RecoverEmail" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="email" value="" name="email" id="RecoverEmail" class="input-full" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" autocorrect="off" autocapitalize="off">

          <p>
            <input type="submit" class="btn btn--full" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.submit',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.submit' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">
          </p>
          <button type="button" id="HideRecoverPasswordLink">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.recover_password.cancel',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.recover_password.cancel' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</button>
        <input type='hidden' name='customer[tags]' value='ls~{% if cart.attributes.LS_language %}{{ cart.attributes.LS_language }}{% else %}{{ shop.metafields.langshop['lang_default'] }}{% endif %}ls~'/> 
 {% endform %}
      </div>

    </div>

    {% comment %}
      If accounts are set as optional, the following will be shown as an option
      during checkout, not on the default /login page.
    {% endcomment %}
    {% if shop.checkout.guest_login %}
      <hr class="hr--clear">

      <h1>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.guest_title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.guest_title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h1>
      <hr class="hr--small">

      {% form 'guest_login' %}
        <input type="submit" class="btn" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.login.guest_continue',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.login.guest_continue' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">
      <input type='hidden' name='customer[tags]' value='ls~{% if cart.attributes.LS_language %}{{ cart.attributes.LS_language }}{% else %}{{ shop.metafields.langshop['lang_default'] }}{% endif %}ls~'/> 
 {% endform %}
    {% endif %}

  </div>

</div>
