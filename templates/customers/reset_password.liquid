{% include 'LS_5906464808_global' %}
<!-- /templates/customers/reset_password.liquid -->

<div class="grid">
  <div class="grid__item large--one-third push--large--one-third text-center">

    <div class="form-vertical">
      {% form 'reset_customer_password' %}

        <header class="section-header">
          <h1>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h1>
          <p>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.subtext',  email: email  %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.subtext' | t: email: email }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</p>
          <hr class="hr--small">
        </header>

        {{ form.errors | default_errors }}

        <label for="ResetPassword" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.password',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.password' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.password',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.password' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">

        <label for="PasswordConfirmation" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.password_confirm',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.password_confirm' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.password_confirm',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.password_confirm' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">

        <div class="text-center">
          <input type="submit" class="btn btn--full" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.reset_password.submit',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.reset_password.submit' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">
        </div>

      <input type='hidden' name='customer[tags]' value='ls~{% if cart.attributes.LS_language %}{{ cart.attributes.LS_language }}{% else %}{{ shop.metafields.langshop['lang_default'] }}{% endif %}ls~'/> 
 {% endform %}
    </div>

  </div>
</div>
