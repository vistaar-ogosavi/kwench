{% include 'LS_5906464808_global' %}
<!-- /templates/customers/addressess.liquid -->
{% comment %}

  Template note:
    - There are instances of inline JS below. Best practices advise separating this
      into an external JS file
    - There are separate 'add new' and 'edit' address forms

{% endcomment %}

{% paginate customer.addresses by 5 %}

<header class="section-header text-center">
  <h1>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.account.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.account.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h1>
  <hr class="hr--small">
</header>

<div class="grid">

  <div class="grid__item one-third medium-down--one-whole medium-down--text-center">
    <p><a href="#" class="btn" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.add_new',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.add_new' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>
    <hr class="hr--small hr--clear">
    <p><a href="/account" class="return-link">&larr; {% include 'LS_5906464808_locales', LS_locales_item: 'customer.account.return',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.account.return' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>
    <hr class="hr--small hr--clear">
  </div>
  <div class="grid__item two-thirds medium-down--one-whole">

    {% comment %}
      Add address form, hidden by default
    {% endcomment %}
    <div id="AddAddress" class="form-vertical" style="display: none;">
      {% form 'customer_address', customer.new_address %}

        <h2 class="h3">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.add_new',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.add_new' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h2>

        <div class="grid grid--small">

          <div class="grid__item one-half small--one-whole">
            <label for="AddressFirstNameNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.first_name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.first_name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="text" id="AddressFirstNameNew" class="input-full" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words">
          </div>

          <div class="grid__item one-half small--one-whole">
            <label for="AddressLastNameNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.last_name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.last_name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="text" id="AddressLastNameNew" class="input-full" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words">
          </div>

        </div>

        <label for="AddressCompanyNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.company',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.company' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="text" id="AddressCompanyNew" class="input-full" name="address[company]" value="{{form.company}}" autocapitalize="words">

        <label for="AddressAddress1New">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.address1',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.address1' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="text" id="AddressAddress1New" class="input-full" name="address[address1]" value="{{form.address1}}" autocapitalize="words">

        <label for="AddressAddress2New">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.address2',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.address2' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        <input type="text" id="AddressAddress2New" class="input-full" name="address[address2]" value="{{form.address2}}" autocapitalize="words">

        <div class="grid grid--small">
          <div class="grid__item large--one-half">
            <label for="AddressCityNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.city',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.city' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="text" id="AddressCityNew" class="input-full" name="address[city]" value="{{form.city}}" autocapitalize="words">
          </div>

          <div class="grid__item large--one-half">
            <label for="AddressCountryNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.country',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.country' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <select id="AddressCountryNew" class="input-full" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>
          </div>

          <div class="grid__item" id="AddressProvinceContainerNew" style="display:none">
            <label for="AddressProvinceNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.province',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.province' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <select id="AddressProvinceNew" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
          </div>

          <div class="grid__item large--one-half">
            <label for="AddressZipNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.zip',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.zip' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="text" id="AddressZipNew" class="input-full" name="address[zip]" value="{{form.zip}}" autocapitalize="characters">
          </div>

          <div class="grid__item large--one-half">
            <label for="AddressPhoneNew">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.phone',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.phone' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="tel" id="AddressPhoneNew" class="input-full" name="address[phone]" value="{{form.phone}}">
          </div>
        </div>

        <p>
          {{ form.set_as_default_checkbox }}
          <label for="address_default_address_new" class="inline">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.set_default',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.set_default' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
        </p>

        <p><input type="submit" class="btn" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.add',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.add' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}"></p>
        <p><a href="#" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.cancel',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.cancel' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>

        <hr>
      {% endform %}
    </div>

    <h2 class="h3">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.title',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.title' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h2>

    {% comment %}
      List all customer addresses with a unique edit form.
      Also add pagination in case they have a large number of addresses
    {% endcomment %}
    {% for address in customer.addresses %}
      {% if address == customer.default_address %}
        <p><strong>{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.default',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.default' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</strong></p>
      {% endif %}

      {{ address | format_address }}

      <p>
        {% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.edit',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.edit' | t | edit_customer_address_link: address.id }}{% else %}{{ LS_5906464808_locales_value | edit_customer_address_link: address.id  }}{% endif %} |
        {% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.delete',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.delete' | t | delete_customer_address_link: address.id }}{% else %}{{ LS_5906464808_locales_value | delete_customer_address_link: address.id  }}{% endif %}
      </p>

      <div id="EditAddress_{{address.id}}" class="form-vertical" style="display:none;">
        {% form 'customer_address', address %}

          <h2 class="h4">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.edit_address',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.edit_address' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</h2>

          <div class="grid grid--small">
            <div class="grid__item one-half small--one-whole">
              <label for="AddressFirstName_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.first_name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.first_name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
              <input type="text" id="AddressFirstName_{{form.id}}" class="input-full" name="address[first_name]" value="{{form.first_name}}" autocapitalize="words">
            </div>

            <div class="grid__item one-half small--one-whole">
              <label for="AddressLastName_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.last_name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.last_name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
              <input type="text" id="AddressLastName_{{form.id}}" class="input-full" name="address[last_name]" value="{{form.last_name}}" autocapitalize="words">
            </div>
          </div>

          <label for="AddressCompany_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.company',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.company' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="text" id="AddressCompany_{{form.id}}" class="input-full" name="address[company]" value="{{form.company}}" autocapitalize="words">

          <label for="AddressAddress1_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.address1',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.address1' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="text" id="AddressAddress1_{{form.id}}" class="input-full" name="address[address1]" value="{{form.address1}}" autocapitalize="words">

          <label for="AddressAddress2_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.address2',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.address2' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="text" id="AddressAddress2_{{form.id}}" class="input-full" name="address[address2]" value="{{form.address2}}" autocapitalize="words">

          <label for="AddressCity_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.city',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.city' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <input type="text" id="AddressCity_{{form.id}}" class="input-full" name="address[city]" value="{{form.city}}" autocapitalize="words">

          <label for="AddressCountry_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.country',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.country' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          <select id="AddressCountry_{{form.id}}" class="input-full" name="address[country]" data-default="{{form.country}}">{{ country_option_tags }}</select>

          <div id="AddressProvinceContainer_{{form.id}}" style="display:none">
            <label for="AddressProvince_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.province',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.province' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <select id="AddressProvince_{{form.id}}" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
          </div>

          <div class="grid grid--small">
            <div class="grid__item one-half small--one-whole">
              <label for="AddressZip_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.zip',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.zip' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
              <input type="text" id="AddressZip_{{form.id}}" class="input-full" name="address[zip]" value="{{form.zip}}" autocapitalize="characters">
            </div>

            <div class="grid__item one-half small--one-whole">
              <label for="AddressPhone_{{form.id}}">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.phone',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.phone' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
              <input type="tel" id="AddressPhone_{{form.id}}" class="input-full" name="address[phone]" value="{{form.phone}}">
            </div>
          </div>

          <p>
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_{{form.id}}" class="inline">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.set_default',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.set_default' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
          </p>

          <p><input type="submit" class="btn" value="{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.update',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.update' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}"></p>
          <p><a href="#" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;">{% include 'LS_5906464808_locales', LS_locales_item: 'customer.addresses.cancel',   %}{% if LS_5906464808_locales_value == '' %}{{ 'customer.addresses.cancel' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</a></p>

          <hr>
        {% endform %}
      </div>

    {% endfor %}

    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}

  </div>

</div>

<script>
  // Initialize observers on address selectors
  new Shopify.CountryProvinceSelector('AddressCountryNew', 'AddressProvinceNew', {
    hideElement: 'AddressProvinceContainerNew'
  });

  // Setup province selector on each customer address
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('AddressCountry_{{address.id}}', 'AddressProvince_{{address.id}}', {
      hideElement: 'AddressProvinceContainer_{{address.id}}'}
    );
  {% endfor %}

  // Modified contents of customer_area.js (global asset)
  Shopify.CustomerAddress = {
    toggleForm: function(id) {
      var editEl = document.getElementById('EditAddress_'+id);
      editEl.style.display = editEl.style.display == 'none' ? '' : 'none';
      return false;
    },

    toggleNewForm: function() {
      var el = document.getElementById('AddAddress');
      el.style.display = el.style.display == 'none' ? '' : 'none';
      return false;
    },

    destroy: function(id, confirm_msg) {
      if (confirm(confirm_msg || "Are you sure you wish to delete this address?")) {
        Shopify.postLink('/account/addresses/'+id, {'parameters': {'_method': 'delete'}});
      }
    }
  }
</script>

{% endpaginate %}
