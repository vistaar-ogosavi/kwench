{% include 'LS_5906464808_global' %}
<!-- /templates/page.contact.liquid -->
<div class="grid">

  <div class="grid__item large--five-sixths push--large--one-twelfth">

    <header class="section-header text-center">
      <h1>{% include 'LS_5906464808_title', item: page %}{{ LS_5906464808_item_title  }}</h1>
      <hr class="hr--small">
    </header>

    <div class="grid">
      <div class="grid__item large--four-fifths push--large--one-tenth">
        <div class="rte rte--nomargin rte--indented-images">
          {% include 'LS_5906464808_content', item: page %}{{ LS_5906464808_item_content  }}
        </div>

        <div class="form-vertical">
          {% form 'contact' %}

            {% comment %}
              Successful message
            {% endcomment %}
            {% if form.posted_successfully? %}
              <p class="note form-success">
                {% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.post_success',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.post_success' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}

            <div class="grid grid--small">
              <div class="grid__item large--one-half">
                <label for="ContactFormName" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
                <input type="text" id="ContactFormName" class="input-full" name="contact[name]" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.name',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.name' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
              </div>

              <div class="grid__item large--one-half">
                <label for="ContactFormEmail" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
                <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.email',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.email' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              </div>
            </div>

            <label for="ContactFormPhone" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.phone',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.phone' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <input type="tel" id="ContactFormPhone" class="input-full" name="contact[phone]" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.phone',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.phone' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">

            <label for="ContactFormMessage" class="hidden-label">{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.message',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.message' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}</label>
            <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[body]" placeholder="{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.message',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.message' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">{% if form.body %}{{ form.body }}{% endif %}</textarea>

            <input type="submit" class="btn right" value="{% include 'LS_5906464808_locales', LS_locales_item: 'contact.form.send',   %}{% if LS_5906464808_locales_value == '' %}{{ 'contact.form.send' | t }}{% else %}{{ LS_5906464808_locales_value  }}{% endif %}">

          {% endform %}
        </div>
      </div>
    </div>

  </div>

</div>
